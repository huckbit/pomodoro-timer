{
  "name": "pomodoro",
  "version": "1.0.0",
  "description": "pomodoro timer using electron",
  "main": "dist/index.js",
  "scripts": {
    "start:sass": "sass --watch src/style/styles.scss dist/styles.css",
    "start:run": "tsc -w && electron .",
    "start": "concurrently npm:start:*",
    "create-mac-package": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=assets/icon.icns --prune=true --out=release-builds",
    "create-windows-package": "electron-packager . --overwrite --platform=win32 --arch=ia32 --icon=assets/icon.ico --prune=true --out=release-builds",
    "create-linux-package": "electron-packager . --overwrite --platform=linux --arch=x64 --icon=assets/icon.png --prune=true --out=release-builds",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/huckbit/pomodoro.git"
  },
  "keywords": [
    "pomodoro"
  ],
  "author": "Max Ranauro",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/huckbit/pomodoro/issues"
  },
  "homepage": "https://github.com/huckbit/pomodoro#readme",
  "build": {
    "appId": "com.pomodoro-app",
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "icon": "assets/icon.icns"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.2",
    "@types/electron": "^1.6.10",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.19",
    "concurrently": "^8.2.2",
    "electron-packager": "^17.1.2",
    "jest": "^29.7.0",
    "jest-dom": "^4.0.0",
    "sass": "^1.71.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@types/play-sound": "^1.1.2",
    "electron": "^29.0.0",
    "play-sound": "^1.1.6"
  }
}
